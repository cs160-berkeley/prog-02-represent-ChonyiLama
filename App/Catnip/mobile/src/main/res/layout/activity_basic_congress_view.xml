<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cs160.joleary.catnip.BasicCongressView">


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_learn1"
        android:layout_alignBottom="@+id/line1"
        android:layout_alignParentStart="true"
        android:text="@string/learn_more" />
        <!--android:layout_below="@+id/listview_background_shape"-->
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id = "@+id/line1"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="150dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id = "@+id/line2"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="320dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/learn_more"
        android:id="@+id/button_learn2"
        android:layout_above="@+id/button_learn3"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="118dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/learn_more"
        android:id="@+id/button_learn3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/senator_1"
        android:id="@+id/textView_senator1"
        android:textSize="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView_senator2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/senator_2"
        android:id="@+id/textView_senator2"
        android:textSize="24dp"
        android:layout_below="@+id/line1"
        android:layout_toEndOf="@+id/button_learn1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/senator_3"
        android:id="@+id/textView_senator3"
        android:textSize="24dp"
        android:layout_alignTop="@+id/line2"
        android:layout_alignEnd="@+id/textView_senator1" />


</RelativeLayout>
